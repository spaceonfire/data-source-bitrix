{
  "name": "spaceonfire/data-source-bitrix",
  "type": "library",
  "description": "",
  "keywords": [
    "spaceonfire",
    "data-source-bitrix"
  ],
  "homepage": "https://github.com/spaceonfire/data-source-bitrix",
  "license": "MIT",
  "authors": [
    {
      "name": "Constantine Karnaukhov",
      "email": "genteelknight@gmail.com",
      "homepage": "https://www.onfire.space/",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": "^7.2",
    "doctrine/instantiator": "^1.3",
    "laminas/laminas-hydrator": "^3.0|^4.0",
    "spaceonfire/data-source": "^2.5",
    "spaceonfire/bitrix-tools": "^0.8",
    "spiral/pagination": "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "phpstan/phpstan": "^0.12",
    "roave/security-advisories": "dev-master",
    "symplify/easy-coding-standard-prefixed": "^8.0"
  },
  "autoload": {
    "psr-4": {
      "spaceonfire\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spaceonfire\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit",
    "codestyle": "ecs check --ansi",
    "lint": "phpstan analyze --memory-limit=512M --ansi"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.5-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
